<h2>Update User</h2>
<!--form-->
<form method="POST" id="update_user">
    <div style="width: 500px;">
        <label for="ex3">Name</label>
        <input type="hidden" name="id" value="<%= user._id %>">
        <input class="form-control" name="name" value="<%= user.name %>" id="ex3" type="text">
      <br>
      
        <label for="ex3">Email</label>
        <input class="form-control" name="email" value="<%= user.email %>" id="ex3" type="text">
      <br>

      <div>
        <label><input type="radio" name="gender" value="Male" <%= user.gender == 'Male'? 'checked' : ''  %> >Male</label>
      </div>
      <div>
        <label><input type="radio" name="gender" value="Female" <%= user.gender == 'Female'? 'checked' : ''  %> >Female</label>
      </div>
      <div><br>
        <label><input type="radio" name="status" value="Active" <%= user.status == 'Active'? 'checked' : ''  %>>Active</label>
      </div>
      <div>
        <label><input type="radio" name="status" value="Inactive" <%= user.status == 'Inactive'? 'checked' : ''  %>>Inactive</label>
      </div>
    </div>
 
    <button type="submit" value="Submit">Save</button>

</form>
<!--/form-->



